<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:layout_height="304dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewCandidates"
            tools:src="@drawable/capture1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            tools:text="Judul"
            android:id="@+id/textViewJudulCan"
            android:layout_marginLeft="16dp"
            android:layout_alignBottom="@+id/imageViewCandidates"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Deskripsi"
            android:id="@+id/textViewDeskripsiCan"
            android:layout_below="@+id/imageViewCandidates"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:id="@+id/buttonEdit"
            android:textColor="?attr/colorPrimary"
            android:layout_below="@+id/textViewDeskripsi"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/buttonDelete"
            android:textColor="?attr/colorAccent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/buttonEdit"
            android:layout_below="@+id/textViewDeskripsi"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
